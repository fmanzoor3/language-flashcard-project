# Azure OpenAI Configuration
# Copy this file to .env and fill in your actual values

# Your Azure OpenAI endpoint (e.g., https://your-resource-name.openai.azure.com/)
VITE_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Your Azure OpenAI API key
VITE_AZURE_OPENAI_API_KEY=your-api-key-here

# Deployment names for each model
# gpt-4o-mini is used by default (cost-effective)
# gpt-4o is used for higher-quality explanations when needed
VITE_AZURE_OPENAI_GPT4O_DEPLOYMENT=gpt-4o
VITE_AZURE_OPENAI_GPT4O_MINI_DEPLOYMENT=gpt-4o-mini

# Optional: Embedding model deployment (for semantic search)
VITE_AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Optional: Realtime audio model for voice conversations
# Set to 'true' to enable voice features (requires gpt-4o-mini-realtime-preview deployment)
VITE_ENABLE_REALTIME_AUDIO=false
VITE_AZURE_OPENAI_REALTIME_DEPLOYMENT=gpt-4o-mini-realtime-preview

# Region (swedencentral)
VITE_AZURE_REGION=swedencentral
